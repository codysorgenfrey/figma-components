{
  "compilerOptions": {
    "strict": true,
    "target": "ES6", // Needed for @observable
    "moduleResolution": "bundler",
    "lib": ["ES6", "DOM"],
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react", // Needed for storybook
    "allowJs": false, // Needed for storybook
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "rootDir": "src" // Needed for proper type generation
  },
  "include": ["src"],
  "exclude": ["**/*.stories.ts"]
}
