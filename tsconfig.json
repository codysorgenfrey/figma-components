{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "moduleResolution": "bundler",
    "lib": ["ES6", "DOM"],
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"],
  "exclude": ["*.stories.ts"]
}
