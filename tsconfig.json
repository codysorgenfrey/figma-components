{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"]
}
